@model IdentityServer.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<!doctype html>
<html lang="en">


<!-- Mirrored from thememakker.com/templates/lucid/hr/html/light/page-register.html by HTTrack Website Copier/3.x [XR&CO'2014], Sun, 04 Nov 2018 11:31:12 GMT -->
<head>
    <title>:: Lucid HR :: Sign Up</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <meta name="description" content="Lucid Bootstrap 4.1.1 Admin Template">
    <meta name="author" content="WrapTheme, design by: ThemeMakker.com">

    <link rel="icon" href="~/Content/favicon.ico" type="image/x-icon">
    <!-- VENDOR CSS -->
    <link rel="stylesheet" href="~/Content/vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/vendor/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/vendor/bootstrap-datepicker/css/bootstrap-datepicker3.min.css">
    <link rel="stylesheet" href="~/Content/vendor/bootstrap-multiselect/bootstrap-multiselect.css">
    <link rel="stylesheet" href="~/Content/vendor/summernote/dist/summernote.css" />
    <link rel="stylesheet" href="~/Content/vendor/dropify/css/dropify.min.css">

    <!-- MAIN CSS -->
    <link rel="stylesheet" href="~/Content/css/main.css">
    <link rel="stylesheet" href="~/Content/css/color_skins.css">
</head>
<body class="theme-orange">
    <div class="row">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
                  @Html.ValidationSummary("", new { @class = "text-danger" })
        <!-- WRAPPER -->
            <div id="wrapper">
                <div class="vertical-align-wrap">
                    <div class="vertical-align-middle auth-main">
                        <div class="auth-box">
                            <div class="top">
                                <img src="~/Content/images/Mapblanc007.png"alt="Lucid">
                            </div>
                            <div class="card">
                                <div class="header">
                                    <p class="lead">Create an account</p>
                                </div>
                                <div class="body">
                                    <form class="form-auth-small">
                                        <div class="form-group">
                                            <label for="signup-email" class="control-label sr-only">Email</label>
                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })

                                        </div>
                                       
                                            <div class="form-group">
                                              <div class="col-md-3 col-sm-12">
                                                    @Html.DropDownList("Roles", ViewBag.Roles as SelectList, String.Empty, new { htmlAttributes = new { @class = "form-control show-tick" } })
                                                    @Html.ValidationMessageFor(model => model.Roles, "", new { @class = "text-danger" })
                                                </div>
                                           
                                            </div>
                                            <div class="form-group">
                                                <label for="signup-password" class="control-label sr-only">Password</label>
                                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                                            </div>
                                            <div class="form-group">
                                                <label for="signup-password" class="control-label sr-only">Confirm Password</label>
                                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password" })
                                            </div>
                                            <button type="submit" class="btn btn-primary btn-lg btn-block">REGISTER</button>
                                            <div class="bottom">
                                                <span class="helper-text">Already have an account? <a >  @Html.ActionLink("login", "login") </a></span>
                                            </div>
</form>
                                    <div class="separator-linethrough"><span>OR</span></div>
                                    <button class="btn btn-signin-social"><i class="fa fa-facebook-official facebook-color"></i> Sign in with Facebook</button>
                                    <button class="btn btn-signin-social"><i class="fa fa-twitter twitter-color"></i> Sign in with Twitter</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
	<!-- END WRAPPER -->
        }
    </div>
    </body>
</html>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
